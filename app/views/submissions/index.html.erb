<h1>All Submissions</h1>

	<ul>
		<% @submissions.each do |submission| %>
			<li><%= link_to submission.title, submission.url %></li>
			<li><%= submission.user.email %></li>
			<li><%= link_to 'View Comments', submission_comments_path(:submission_id) %></li>
		<% end %>

		<% if user_signed_in? %>
			<li><%= link_to 'Add Comment', new_submission_comment_path(:submission_id) %></li>
		<% else %>
			<li><%= link_to 'Add Comment', new_user_session_path %></li>
		<% end %>

		<% if user_signed_in? %>
			<li><%= link_to 'Add New Submission', new_submission_path %></li>
		<% else %>
			<li><%= link_to 'Add New Submission', new_user_session_path %></li>
		<% end %>
	</ul>

